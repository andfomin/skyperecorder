<Window x:Class="Test01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Button x:Name="RecordButton" HorizontalAlignment="Left" Margin="25,10,0,0" VerticalAlignment="Top" Width="75" Click="RecordButton_Click"
                ClickMode="Press" Content="{Binding GetButtonText}" IsEnabled="{Binding GetButtonEnabled}" Foreground="{Binding GetButtonForegroundColor}" Height="50"
                />

    </Grid>
</Window>
